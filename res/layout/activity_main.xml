<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.somnus.broadcastreceiver.MainActivity" >

    <Button
        android:id="@+id/btn_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onAction"
        android:text="@string/btn_send_broadcast_receiver" />

    <Button
        android:id="@+id/btn_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_01"
        android:onClick="onAction"
        android:text="@string/btn_send_broadcast_receiver" />

    <Button
        android:id="@+id/btn_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_02"
        android:onClick="onAction"
        android:text="@string/btn_interface_test" />

</RelativeLayout>